<view class="hand" >
  <image src="../../images/close.png" mode="aspectFill" class="close" bindtap="close"></image>
  <view class="top" wx:if="{{top}}">
    <view>{{top}}</view>
    <view class="">
      <image src="../../images/tap3.png" mode="aspectFill" class="tap"></image>
    </view>
    <view class="">
      <image src="../../images/arrow_down.png" mode="aspectFill" class="arrow"></image>
    </view>
  </view>
  <view class="bottom" wx:if="{{bottom}}">
    <view class="">
      <image src="../../images/arrow_top.png" mode="aspectFill" class="arrow"></image>
    </view>
    <view class="">
      <image src="../../images/tap.png" mode="aspectFill" class="tap"></image>
    </view>
    <view>{{bottom}}</view>
  </view>
  <view class="left" wx:if="{{left}}">
    <view class="">
      <image src="../../images/arrow_right.png" mode="aspectFill" class="arrow"></image>
    </view>
    <view class="">
      <image src="../../images/tap.png" mode="aspectFill" class="tap"></image>
    </view>
    <view>{{left}}</view>
  </view>
  <view class="right" wx:if="{{right}}">
    <view>
      <image src="../../images/arrow_left.png" mode="aspectFill" class="arrow"></image>
    </view>
    <view>
      <image src="../../images/tap2.png" mode="aspectFill" class="tap"></image>
    </view>
    <view>{{right}}</view>
  </view>
</view>